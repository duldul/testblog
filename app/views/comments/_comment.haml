%blockquote.comment{class: ("abusive" if comment.abusive)}
	.votes
		= link_to "+", vote_up_post_comment_path(post, comment), remote: true, method: "post", class: "btn btn-small btn-success", title: "Vote UP"
		= link_to "-", vote_down_post_comment_path(post, comment), remote: true, method: "post", class: "btn btn-small btn-danger", title: "Vote DOWN"
	= simple_format comment.body
	= content_tag :small, comment.user.to_s, class: 'author'
	= link_to "Nie obra≈∫liwy", mark_as_not_abusive_post_comment_path(post, comment), method: "post" if comment.abusive

	